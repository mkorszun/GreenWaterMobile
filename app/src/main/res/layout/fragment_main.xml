<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="0.0 L"
            android:textSize="100dp"
            android:textColor="#402B2B"
            android:layout_gravity="center_horizontal"
            android:id="@+id/day_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="0.0$"
            android:textSize="100dp"
            android:textColor="#402B2B"
            android:layout_gravity="center_horizontal"
            android:id="@+id/day_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="#545454"/>

        <TableRow
            android:paddingTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:baselineAligned="false">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Week"
                    android:textSize="30dp"
                    android:textColor="#312222"
                    android:id="@+id/week_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/week_label"
                    android:text="0.0 L"
                    android:textSize="25dp"
                    android:textColor="#393131"
                    android:id="@+id/week_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:layout_below="@+id/week_usage"
                    android:text="0.0 $"
                    android:textSize="25dp"
                    android:textColor="#645757"
                    android:id="@+id/week_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Month"
                    android:textSize="30dp"
                    android:textColor="#312222"
                    android:id="@+id/month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/month_label"
                    android:text="0.0 L"
                    android:textSize="25dp"
                    android:textColor="#393131"
                    android:id="@+id/month_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:layout_below="@+id/month_usage"
                    android:text="0.0 $"
                    android:textSize="25dp"
                    android:textColor="#645757"
                    android:id="@+id/month_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Year"
                    android:textSize="30dp"
                    android:textColor="#312222"
                    android:id="@+id/year_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/year_label"
                    android:text="0.0 L"
                    android:textSize="25dp"
                    android:textColor="#393131"
                    android:id="@+id/year_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="10dp"
                    android:layout_below="@+id/year_usage"
                    android:text="0.0 $"
                    android:textSize="25dp"
                    android:textColor="#645757"
                    android:id="@+id/year_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </TableRow>

    </LinearLayout>

</RelativeLayout>
