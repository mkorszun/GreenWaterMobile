<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"/>

    <style name="h0">
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">#402B2B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="h1">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#312222</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="h2">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#393131</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0.0 L</item>
    </style>

    <style name="h3">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#645757</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0.0 $</item>
    </style>

    <style name="periodic_column">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#679ED2</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="periodic_section_row">
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="periodic_section">
        <item name="android:layout_weight">2</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">#545454</item>
    </style>

    <style name="current_metrics">
        <!--<item name="android:background">@anim/animation_drawable_background</item>-->
        <item name="android:layout_weight">3</item>
        <!--<item name="android:background">#2aaAD2</item>-->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="metrics_view_background">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="main_window">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#408AD2</item>
    </style>

</resources>
